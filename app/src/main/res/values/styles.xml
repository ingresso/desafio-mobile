<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DesafioMobileTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DesafioMobileTextView.Large">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DesafioMobileTextView.Large.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="DesafioMobileTextView.Small">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="DesafioMobileTextView.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DesafioMobileToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/background_theme</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>

    </style>

    <style name="DesafioMobileButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/DesafioMobileButtonShapeAppearance</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">42dp</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/yellow</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
    </style>

    <style name="DesafioMobileButton.Favorite">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/yellow</item>
        <item name="icon">@drawable/ic_favorite</item>
        <item name="iconTint">@color/yellow</item>
        <item name="iconPadding">10dp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="backgroundTint">@color/background_theme</item>
    </style>

    <style name="DesafioMobileButton.Share">
        <item name="backgroundTint">@color/light_blue</item>
        <item name="icon">@drawable/ic_share</item>
        <item name="iconPadding">10dp</item>
    </style>

    <style name="DesafioMobileButtonShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>
    
    <style name="DesafioMobileBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DesafioMobileEditText.Search" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="DesafioMobileDropDownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="boxBackgroundColor">@color/background_theme_dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">false</item>
        <item name="counterEnabled">false</item>
        <item name="endIconDrawable">@drawable/ic_end_icon</item>
        <item name="endIconTint">@color/yellow</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DesafioMobileDropDownMenuText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="DesafioMobileRadioButton" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@drawable/bg_radio_button_home_selector</item>
        <item name="android:textColor">@color/color_radio_button_home</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="drawableTint">@color/color_radio_button_home</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_width">163dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>